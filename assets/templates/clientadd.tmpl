<h2>Add Client</h2>
<form class="form-horizontal" method="post">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="form-group">
        <label class="control-label col-sm-3" for="cname">Client Name:</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="cname" name="client_name" placeholder="Apple Inc">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-3" for="cperson">Contact Person:</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="cperson" name="contact_person" placeholder="Johnny Appleseed">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-3" for="caddress">Address:</label>
        <div class="col-sm-9">
          <textarea class="form-control" id="caddress" placeholder="1 Infinite Loop, Cupertino" name="client_address" rows="3"></textarea>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-3" for="cphone1">Phone (primary):</label>
        <div class="col-sm-9">
          <input type="tel" class="form-control" id="cphone1" name="client_phone_primary" placeholder="133 622">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-3" for="cphone2">Phone (secondary):</label>
        <div class="col-sm-9">
          <input type="tel" class="form-control" id="cphone2" name="client_phone_secondary" placeholder="1300 321 456">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-3" for="cemail">Email:</label>
        <div class="col-sm-9">
          <input type="email" class="form-control" id="cemail" name="client_email" placeholder="johnny.appleseed@apple.com">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-3" for="cinfo">Additional Info:</label>
        <div class="col-sm-9">
          <textarea class="form-control" id="cinfo" placeholder="Works at the Robina Apple Store." name="client_info" rows="10"></textarea>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-9 col-md-offset-3">
          <button type="reset" class="btn btn-danger">Reset</button>
          <button type="submit" class="btn btn-primary">Add Client</button>
        </div>
      </div>
    </div>
  </div>
</form>
