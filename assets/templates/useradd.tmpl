<h2>Add User</h2>
<form class="form-horizontal" method="post">
  <div class="form-group">
    <label class="control-label col-sm-2" for="username">User Name:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="username" name="username" placeholder="jappleseed">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="permission">Type:</label>
    <div class="col-sm-10">
      <select class="form-control" id="permission" name="permission">
        <option value="administrator">Administrator</option>
        <option value="standard">Standard</option>
        <option value="auditor">Auditor</option>
      </select>
    </div>
  </div>
  <br />
  <div class="form-group">
    <label class="control-label col-sm-2" for="fullname">Full Name:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Johnny Appleseed">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Email:</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="email" name="email" placeholder="jappleseed@apple.com">
    </div>
  </div>
  <br />
  <div class="form-group">
    <label class="control-label col-sm-2" for="password1">Password:</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="password1" name="password">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="password2">Verify Password:</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="password2" name="password_verify">
    </div>
  </div>
  <br />
  <div class="form-group">
    <div class="col-sm-10 col-md-offset-2">
      <button type="submit" class="btn btn-primary">Add User</button>
    </div>
  </div>
</form>
